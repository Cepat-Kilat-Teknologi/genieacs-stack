# GenieACS Environment Configuration
# Copy this file to .env and update the values before running
# cp .env.example .env

# ===========================================
# SECURITY - CHANGE THESE VALUES IN PRODUCTION!
# ===========================================

# JWT Secret for UI authentication (min 32 characters recommended)
# Generate with: openssl rand -hex 32
GENIEACS_UI_JWT_SECRET=your-super-secret-jwt-key-change-me

# Admin credentials
GENIEACS_ADMIN_USERNAME=admin
GENIEACS_ADMIN_PASSWORD=change-this-strong-password

# Regular user credentials (optional)
GENIEACS_USER_USERNAME=user
GENIEACS_USER_PASSWORD=change-this-password

# ===========================================
# AUTHENTICATION SETTINGS
# ===========================================

# Enable authentication for NBI API (recommended: true)
GENIEACS_NBI_AUTH=true

# Enable authentication for UI (recommended: true)
GENIEACS_UI_AUTH=true

# JWT token expiration (e.g., 1d, 7d, 30d)
GENIEACS_JWT_EXPIRES_IN=7d

# ===========================================
# MONGODB CONFIGURATION
# ===========================================

# MongoDB root credentials (if using authentication)
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=change-this-mongo-password

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Host binding (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
GENIEACS_HOST=0.0.0.0

# Service ports
GENIEACS_CWMP_PORT=7547
GENIEACS_NBI_PORT=7557
GENIEACS_FS_PORT=7567
GENIEACS_UI_PORT=3000

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Allow insecure connections (set to false in production)
GENIEACS_ALLOW_INSECURE=false

# Debug mode (set to false in production)
# GENIEACS_DEBUG=false